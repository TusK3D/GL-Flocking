#include "include/MyMath.h"

MyMath::MyMath()
{
}


GLfloat MyMath::lengthSquared(ngl::Vec3 _value)
{
  return(_value.m_x*_value.m_x)+(_value.m_y*_value.m_y)+(_value.m_z*_value.m_z);
}

GLfloat MyMath::mag(ngl::Vec3 _value)
{
  return(sqrt(_value.m_x*_value.m_x)+(_value.m_y*_value.m_y)+(_value.m_z*_value.m_z));
}

